{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "command": "yarn",
  "type": "shell",
  "presentation": {
    "echo": true,
    "reveal": "always",
    "focus": false,
    "panel": "shared",
    "showReuseMessage": true,
    "clear": false
  },
  "tasks": [
    {
      "label": "install",
      "args": ["install"]
    },
    {
      "label": "update",
      "args": ["update"]
    },
    {
      "label": "test",
      "args": ["run", "test"]
    },
    {
      "label": "build",
      "args": ["run", "watch"]
    }
  ]
}
